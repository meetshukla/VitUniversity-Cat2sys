<div class="container" align="center">
<h1>Add New Book</h1>
<div class="row">
    <form action="/books" method="Post" class="col s12">
      <div class="row">
        <div class="input-field col s6 ">
          <input type="text" class="validate" name="coursecode" placeholder="Enter Course Code" required >
        </div>
      </div>
      <div class="row">
        <div class="input-field col s6">
          <input  type="text" class="validate" name="name" placeholder="Enter Name of the BOOK" required>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s6">
          <input  type="text" class="validate" name="owner" placeholder="Enter name of the Owner" required>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s6">
          
          <input type="number" class="validate" name="phone" placeholder="Enter Your Phone Number" required>
        </div>
      </div>
     <div class="row">
        <div class="input-field col s6">
          
          <input type="text" class="validate" name="slot" placeholder="Enter The Slot in which you have exam" required>
        </div>
      </div>
      <button class="btn waves-effect waves-light" type="submit" name="action">Submit
    <i class="material-icons right">send</i>
  </button>
    </form>
